<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="styles.css">
  <title>Tree</title>
</head>
<body>

  <!-- Форма -->
  <!-- Контейнер для Полей Ввода -->

  <div class="build-tree-buttons">

  <form action="" method="post">
    <label for="n">Высота Ёлки:</label>
    <input type="text" name="n" id="n" placeholder="кол-во строк" value="">

    <label for="signTree">Символ для Ёлки:</label>
    <input type="text" name="signTree" id="signTree" placeholder="например: *" value="">

    <label for="treeToys">Количество Игрушек:</label>
    <input type="text" name="treeToys" id="treeToys" placeholder="например: 1" value="">

    <label for="signToys">Символ для Игрушки:</label>
    <input type="text" name="signToys" id="signToys" placeholder="например: @" value="">

  </div>
  
  <!-- Контейнер для Кнопки-Создания -->
  <div id="tree-button">
    <input type="submit" value="Создать Ёлку">
  </div>
  </form>

   <!-- Контейнер для Ёлки -->
  <div id="tree-container">


</body>
</html>

  